{% extends app.request.isXmlHttpRequest() 
? 'basejs.html.twig'
: 'base.html.twig' %}

{% block modulName %}
    {{ caption }}
    <small>Edit</small>
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
{% endblock %}

{% block navigation %}
    <li class="active">{{ caption }}</li>
{% endblock %}

{% block body %}

<div class="row">
    <div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>
    

    {{ form_start(edit_form) }}

    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-primary">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Update
        </button>
    </p>
    {{ form_end(edit_form) }}

    <hr/>

    
<div class="form-group">
    <a id="btn_ticket" class="btn btn-default">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>

    <script>
        $('#btn_ticket').click(function() {
            $( "#snitContent" ).load('{{ path('ticket') }}', function () {
                history.pushState({}, null, '{{ path('ticket') }}');
            });
        });
    </script>


    <a id="btn_ticket_new" class="btn btn-info" >
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <script>
        $('#btn_ticket_new').click(function() {
            $( "#snitContent" ).load('{{ path('ticket_new', { 'id':  ticket.id }) }}', function () {
                history.pushState({}, null, '{{ path('ticket_new', { 'id':  ticket.id }) }}');
            });
        });
    </script>
    <form action="{{ path('ticket_delete', { 'id': ticket.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>

</div>


{% endblock %}

