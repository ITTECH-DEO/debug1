{% extends app.request.isXmlHttpRequest() 
? 'basejs.html.twig'
: 'base.html.twig' %}

{% block modulName %}
    {{ caption }}
    <small>Show</small>
    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
{% endblock %}

{% block navigation %}
    <li class="active">{{ caption }}</li>
{% endblock %}

{% block body %}

<div class="row">
    <div class="col-md-6">
        <p><strong>Project</strong></p>
        <p>
            {{ ticket.project }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Type</strong></p>
        <p>
            {{ ticket.type }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Priority</strong></p>
        <p>
            {{ ticket.priority }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Title</strong></p>
        <p>
            {{ ticket.title }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Content</strong></p>
        <p>
            {{ ticket.content }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Image</strong></p>
        <p>
            {{ ticket.image }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Reviewedby</strong></p>
        <p>
            {{ ticket.reviewedBy }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Status</strong></p>
        <p>
            {{ ticket.status }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Assignedto</strong></p>
        <p>
            {{ ticket.assignedTo }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Department</strong></p>
        <p>
            {{ ticket.department }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Createdat</strong></p>
        <p>
            {% if ticket.createdAt %}{{ ticket.createdAt|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Createdby</strong></p>
        <p>
            {{ ticket.createdBy }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Updatedat</strong></p>
        <p>
            {% if ticket.updatedAt %}{{ ticket.updatedAt|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Updatedby</strong></p>
        <p>
            {{ ticket.updatedBy }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ ticket.id }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a id="btn_ticket" class="btn btn-default">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>

    <script>
        $('#btn_ticket').click(function() {
            $( "#snitContent" ).load('{{ path('ticket') }}', function () {
                history.pushState({}, null, '{{ path('ticket') }}');
            });
        });
    </script>


    <a id="btn_ticket_edit" class="btn btn-primary">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>

    <script>
        $('#btn_ticket_edit').click(function() {
            $( "#snitContent" ).load('{{ path('ticket_edit', { 'id':  ticket.id }) }}', function () {
                history.pushState({}, null, '{{ path('ticket_edit', { 'id':  ticket.id }) }}');
            });
        });
    </script>


    <a id="btn_ticket_new" class="btn btn-info" >
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <script>
        $('#btn_ticket_new').click(function() {
            $( "#snitContent" ).load('{{ path('ticket_new', { 'id':  ticket.id }) }}', function () {
                history.pushState({}, null, '{{ path('ticket_new', { 'id':  ticket.id }) }}');
            });
        });
    </script>
    <form action="{{ path('ticket_delete', { 'id': ticket.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

