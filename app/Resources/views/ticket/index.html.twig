    <script>
        function filterTickets() {
            const searchText = document.getElementById('search-box').value.toLowerCase();
            const selectedPriority = document.getElementById('priorityDropdown').value.toLowerCase();
            const selectedDepartment = document.getElementById('departmentDropdown').value.toLowerCase();
            const selectedType = document.getElementById('typeDropdown').value.toLowerCase();
            const selectedResponsible = document.getElementById('responsibleDropdown').value.toLowerCase();
            const selectedWeek = document.getElementById('weekDropdown').value.toLowerCase();
            const selectedStatus = document.getElementById('statusDropdown').value.toLowerCase();

            $.ajax({
                url: '{{ path("filter_tickets") }}',
                type: 'GET',
                data: {
                    search: searchText,
                    priority: selectedPriority,
                    department: selectedDepartment,
                    type: selectedType,
                    responsible: selectedResponsible,
                    week: selectedWeek,
                    status: selectedStatus
                },
                success: function(response) {
                    $('#ticketList').html(response);
                },
                error: function(xhr, status, error) {
                    console.error('Error occurred:', status, error);
                }
            });
        }

