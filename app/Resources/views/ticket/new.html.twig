{% extends app.request.isXmlHttpRequest() 
? 'basejs.html.twig'
: 'base.html.twig' %}

{% block modulName %}
    {{ caption }}
    <small>Create</small>
    <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
{% endblock %}

{% block navigation %}
    <li class="active">{{ caption }}</li>
{% endblock %}

{% block body %}

<div class="row">
    <div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>
    

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <p>
        <button type="submit" name="submit" value="save" class="btn btn-primary"> 
            Save <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        </button>
        <button type="submit" name="submit" value="saveAndAdd" class="btn btn-info"> 
            Save and Add <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
    </p>


    {{ form_end(form) }}

    <hr/>

<div class="form-group">
    <a id="btn_ticket" class="btn btn-default">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>

    <script>
        $('#btn_ticket').click(function() {
            $( "#snitContent" ).load('{{ path('ticket') }}', function () {
                history.pushState({}, null, '{{ path('ticket') }}');
            });
        });
    </script>


</div>

</div>


{% endblock %}

