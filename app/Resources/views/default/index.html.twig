{% extends 'base.html.twig' %} {% block body %}
<div class="container">
  <div class="header d-flex justify-content-between align-items-center">
    <h1>Tickets</h1>
    <a
      href="{{ path('logout') }}"
      class="btn btn-danger"
      onclick="return confirm('Are you sure you want to logout?');"
      >Logout</a
    >
  </div>

  {% for type, messages in app.session.flashBag.all() %} {% for message in
  messages %}
  <div class="flash-message flash-message-{{ type }}">
    {{ message }}
  </div>
  {% endfor %} {% endfor %} 

  {% if is_granted('ROLE_ADMIN') %}
    <div class="alert alert-info mt-3">
        <h5><i class="material-icons">notifications_active</i> Tickets Available for Assignment</h5>
        <form method="POST" action="{{ path('assign_tickets') }}">
            <input type="hidden" name="admin_username" value="{{ app.user.username }}">
            <div class="card-custom-container">
                {% for ticket in tickets_admin %}
                    <div class="card-custom mb-2" data-status="{{ ticket.status }}" data-priority="{{ ticket.priority }}">
                        <div class="card-header-custom {{ ticket.priority }}">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="selected_tickets[]" value="{{ ticket.id }}">
                                    <label class="form-check-label">
                                        Ticket# {{ ticket.id }} - {{ ticket.title }}
                                    </label>
                                </div>
                                <span class="priority-label {{ ticket.priority }}">{{ ticket.priority|capitalize }} Priority</span>
                            </div>
                            <span class="posted-time">Posted at {{ ticket.created_at|date('Y-m-d H:i') }}</span>
                        </div>
                        <div class="card-body-custom">
                            <p class="card-title-custom">{{ ticket.title }}</p>
                            <p class="card-text-custom">{{ ticket.content|raw }}</p>
                            {% if ticket.image %}
                                <p><a href="#" data-bs-toggle="modal" data-bs-target="#imageModal{{ ticket.id }}">Lihat Gambar</a></p>
                            {% endif %}
                        </div>
                    </div>
                    <!-- Modal for Image -->
                    {% if ticket.image %}
                    <div class="modal fade" id="imageModal{{ ticket.id }}" tabindex="-1" aria-labelledby="imageModalLabel{{ ticket.id }}" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="imageModalLabel{{ ticket.id }}">Image for Ticket# {{ ticket.id }}</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <img src="{{ asset(ticket.image) }}" class="img-fluid" alt="Ticket Image">
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                {% else %}
                    <p>No tickets available for assignment.</p>
                {% endfor %}
            </div>
            {% if tickets|length > 0 %}
                <button type="submit" class="btn btn-success mt-3">Assign Tickets</button>
            {% endif %}
        </form>
    </div>
{% endif %}


  <div class="card-header-controls">
    <form id="filterForm" method="GET" action="">
      <div class="d-flex justify-content-between align-items-start">
        <div class="search-bar">
          <input
            type="text"
            id="search-box"
            name="search"
            placeholder="Search for ticket"
            value=""
          />
        </div>
        <div class="filters">
          <div class="dropdown">
            <select
              class="form-select"
              id="priorityDropdown"
              name="priority"
              aria-label="Select Priority"
              onchange="filterTickets();"
            >
              <option value="all">All Priorities</option>
              <option value="low">Low</option>
              <option value="medium">Medium</option>
              <option value="high">High</option>
            </select>
          </div>
          <div class="dropdown">
            <select
              class="form-select"
              id="weekDropdown"
              name="week"
              aria-label="Select Week"
              onchange="filterTickets();"
            >
              <option value="all">All Weeks</option>
              <option value="week-1">Week 1</option>
              <option value="week-2">Week 2</option>
              <option value="week-3">Week 3</option>
              <option value="week-4">Week 4</option>
            </select>
          </div>
          <div class="dropdown">
            <select
              class="form-select"
              id="statusDropdown"
              name="status"
              aria-label="Select Status"
              onchange="filterTickets();"
            >
              <option value="all">All</option>
              <option value="created">Created</option>
              <option value="in progress">In Progress</option>
              <option value="validated">Validated</option>
            </select>
          </div>
          <button
            type="button"
            class="btn btn-primary"
            data-bs-toggle="modal"
            data-bs-target="#newTicketModal"
          >
            <span class="material-icons">add_circle_outline</span>
            New Ticket
          </button>
          <a href="{{ path('kanban') }}" class="btn btn-secondary kanban-btn">
            <span class="material-icons">dashboard</span>
            Kanban Board
          </a>
        </div>
      </div>
    </form>

    <div class="tabs mt-3">
      <a href="#" class="tab-link active" data-target="#all-tickets">
        <span class="material-icons">mail_outline</span>
        All Tickets
      </a>
      <a href="#" class="tab-link" data-target="#new-tickets">
        <span class="material-icons">fiber_new</span>
        New
      </a>
      <a href="#" class="tab-link" data-target="#ongoing-tickets">
        <span class="material-icons">autorenew</span>
        On-Going
      </a>
      <a href="#" class="tab-link" data-target="#resolved-tickets">
        <span class="material-icons">check_circle_outline</span>
        Resolved
      </a>
    </div>
  </div>

  

  <div id="all-tickets" class="tab-content active">
    <div id="ticketList" class="card-custom-container">
      
      {% if tickets|length > 0 %}
        {% for ticket in tickets %}
            {# Get the necessary data from the ticket object #}
            {% set id = ticket.id %}
            {% set priority = ticket.priority %}
            {% set status = ticket.status %}
            {% set title = ticket.title %}
            {% set content = ticket.content %}
            {% set created_at = ticket.createdAt|date('Y-m-d H:i:s') %}
            {% set created_by = ticket.createdBy ?: 'Dummy Creator' %}
            {% set reviewed_by = ticket.reviewedBy ?: 'Dummy Reviewer' %}
            {% set image = ticket.image %}
            
            {# Check for image presence in content using Twig #}
            {% set image_present = false %}
            {% if content matches '/<img[^>]+src="([^">]+)"/i' %}
                {% set image_present = true %}
                {% set content = content|replace({ '<img[^>]+>': '' }) %} {# Remove all image tags #}
            {% endif %}

            <div class="card-custom" data-status="{{ status }}" data-priority="{{ priority }}">
                <div class="card-header-custom {{ priority }}">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="card-title-custom">Ticket# {{ id }}</span>
                        <span class="priority-label {{ priority }}">{{ priority|capitalize }} Priority</span>
                    </div>
                    <span class="posted-time">Posted at {{ created_at }}</span>
                </div>
                <div class="card-body-custom">
                    <p class="card-title-custom">{{ title }}</p>
                    <p class="card-text-custom">{{ content|raw }}</p>
                    {% if image_present or image %}
                        <p><a href="#" data-bs-toggle="modal" data-bs-target="#imageModal{{ id }}">Lihat Gambar</a></p>
                    {% endif %}
                </div>
                <div class="card-footer-custom">
                    <div class="reviewed-by">
                        <div class="created-by">
                            <img src="{{ asset('images/People.png') }}" alt="Avatar">
                            <p class="card-text-custom"><strong>Created by {{ created_by }}</strong></p>
                        </div>
                        <div class="created-by">
                            <img src="{{ asset('images/People.png') }}" alt="Avatar">
                            <p class="card-text-custom"><strong>Reviewed by {{ reviewed_by }}</strong></p>
                        </div>
                    </div>
                    <a href="" class="open-ticket-link">Open Ticket</a>
                </div>
            </div>

            {# Modal for Image #}
            {% if image_present or image %}
                <div class="modal fade" id="imageModal{{ id }}" tabindex="-1" aria-labelledby="imageModalLabel{{ id }}" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="imageModalLabel{{ id }}">Image for Ticket# {{ id }}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                {% if image_present %}
                                    <img src="{{ matches[1] }}" class="img-fluid" alt="Ticket Image">
                                {% elseif image %}
                                    <img src="{{ image }}" class="img-fluid" alt="Ticket Image">
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    {% else %}
        <p>No tickets found.</p>
    {% endif %}
    </div>
  </div>
</div>
